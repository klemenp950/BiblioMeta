@model BiblioMeta2.Models.Knjiga

@{
    ViewData["Title"] = "Delete";
}

<h1>Izbriši</h1>

<h3>Si prepričan, da želiš izbrisati knjigo?</h3>
<div>
    <h4>Knjiga</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Naslov)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Naslov)
        </dd>
        <dt class = "col-sm-2">
            <p>Število strani</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StStrani)
        </dd>
        <dt class = "col-sm-2">
            <p>Število znakov</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StZnakov)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cena)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cena)
        </dd>
        <dt class = "col-sm-2">
            <p>Žanr</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ZanrID)
        </dd>
        <dt class = "col-sm-2">
            <p>Avtor</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AvtorID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Besedilo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Besedilo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="KnjigaID" />
        <input type="submit" value="Izbriši" class="btn btn-danger" /> |
        <a asp-action="Index">Nazaj na seznam</a>
    </form>
</div>
