@model BiblioMeta2.Models.Zanr

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj žanr</h1>

<h4>Žanr</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ImeZanra" class="control-label">Ime žanra</label>
                <input asp-for="ImeZanra" class="form-control" />
                <span asp-validation-for="ImeZanra" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px;">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazaj na seznam</a>
</div>

