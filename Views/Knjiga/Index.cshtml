@model IEnumerable<BiblioMeta2.Models.KnjigaViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Knjige</h1>

<p>
    <a asp-action="Create">Dodaj knjigo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naslov)
            </th>
            <th>
                Število strani
            </th>
            <th>
                Število znakov
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cena)
            </th>
            <th>
                Žanr
            </th>
            <th>
                Avtor
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naslov)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StStrani)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StZnakov)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zanr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvtorIme)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.KnjigaID">Uredi</a> |
                <a asp-action="Details" asp-route-id="@item.KnjigaID">Podrobnosti</a> |
                <a asp-action="Delete" asp-route-id="@item.KnjigaID">Izbriši</a>
            </td>
        </tr>
}
    </tbody>
</table>
